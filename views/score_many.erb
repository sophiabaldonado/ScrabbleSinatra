<section class="score-page">
  <h2>Scrabble Scorer</h2>
  <p>Please type each word seperated by spaces.</p>
  <article class="score-form">
    <form class="score-many-words" action="" method="post">
        <label for="words">Score Multiple Words<label>
        <textarea name="words" placeholder="Your words go here" id="words" rows="10" cols="50"></textarea>

        <input type="submit" value="SCORE">
    </form>

    <section>
      <p>awdo22d ad;adaw ad.d/a dUmpling</p>
      <% if @word_score_pairs %>
        <% @word_score_pairs.each do |pair| %>
          <div class="scored-word">
            <p><%= pair[0] %></p>
          </div>
          <div class="score">
            <p><%= pair[1] %></p>
          </div>
        <% end %>
      <% end %>
    </section>



  </article>
</section>
